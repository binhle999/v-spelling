<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/game_bg"
    tools:context="com.binhle.vspelling.Activity.GameDetailScreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/img_home"
                android:src="@drawable/rsz_home" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:id="@+id/view4" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/img_speaker"
                android:src="@drawable/speaker" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0"
            android:id="@+id/view2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
            <View
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_first_letter"
                    android:src="@drawable/letter_a"
                    android:paddingRight="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_second_letter"
                    android:src="@drawable/letter_b"
                    android:paddingRight="16dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_third_letter"
                    android:src="@drawable/letter_c"
                    android:paddingRight="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_fourth_letter"
                    android:src="@drawable/letter_d"
                    android:paddingRight="16dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_next"
                    android:src="@drawable/nnext"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/view3"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/img_result_msg"
                android:src="@drawable/dungroi"
                android:layout_weight="1" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:ellipsize="none"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:maxLines="1"
                android:textSize="60sp"
                android:id="@+id/score"
                android:textColor="#ff0000" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/view5"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
