<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.binhle.vspelling"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlphaBetScreen"/>
        <activity android:name=".activity.AlphaBetaDetailScreen"/>
        <activity android:name=".activity.SpellingScreen"/>
        <activity android:name=".activity.SpellingDetailScreen"/>
        <activity android:name=".activity.GameDetailScreen"/>
        <activity android:name=".activity.GameOverScreen"/>

    </application>

</manifest>
